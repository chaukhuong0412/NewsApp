<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:key="@string/settings_topic_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_topic_label"
        android:entries="@array/topic"
        android:entryValues="@array/topic"/>

    <ListPreference
        android:key="@string/settings_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_date_label"
        android:entries="@array/settings_date_labels"
        android:entryValues="@array/settings_date_values"/>

</PreferenceScreen>